<h1>Burgers</h1>

<div>
  <img src="../public/assets/img/burger.png" alt="burger">
</div>


<div id="left">
<h2>Uneaten Burgers</h2>



<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="true">
          <button type="submit">Eat The Burger!</button>
        </form>
        
      </li>
    {{/unless}}
  {{/each}}
</ul>

</div>

<div id="right">

<h2>Burgers that have been eaten</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form>
          <button type="submit">DELETE!</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

</div>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">What kind of burger would you like to eat?:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <button type="submit">Add burger</button>
</form>
